<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    app:cardCornerRadius="14dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/userItemPict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#747574"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/productName"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/userItemPict"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="Samsung a13 1975"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="Rp.120000"
                    android:textColor="@color/base"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stockCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productPrice"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/productCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stockCategory"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="8dp"
                    android:text="LOOKBOUTIQUESTORE"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />


        </RelativeLayout>
</androidx.cardview.widget.CardView>